{# src/Views/templates/pages/profil.twig #}
{% extends "layout.twig" %}

{% block title %}Mon profil - Gift App{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto py-12 px-6">
    <h1 class="text-4xl font-extrabold text-gray-800 mb-6 border-b-2 border-indigo-500 pb-2">
        Mon Profil
    </h1>

    <div class="bg-white shadow-xl rounded-xl p-8 space-y-6 transition duration-300 ease-in-out hover:shadow-2xl">
        <div class="flex items-center space-x-6">
            <div class="flex-shrink-0">
                <img src="{{ base_url() }}/img/avatar.png"
                     alt="Avatar utilisateur"
                     class="w-20 h-20 rounded-full object-cover border-2 border-indigo-500 shadow-sm"/>
            </div>
            <div>
                <h2 class="text-2xl font-semibold text-gray-700">{{ user.email }}</h2>
                <span class="text-sm text-gray-500">Identifiant utilisateur : <code class="bg-gray-100 px-2 py-1 rounded">{{ user.id }}</code></span>
            </div>
        </div>

        <div class="border-t pt-4">
            <h3 class="text-lg font-medium text-gray-600 mb-2">Informations</h3>
            <ul class="space-y-1 text-gray-700">
                <li><strong>Adresse email :</strong> {{ user.email }}</li>
                <li><strong>Rôle :</strong> 
                    {% if user.role == 'admin' %}
                        <span class="text-red-600 font-semibold">Administrateur</span>
                    {% else %}
                        <span class="text-indigo-600 font-semibold">Client</span>
                    {% endif %}
                </li>
                <li><strong>Inscrit depuis :</strong> {{ user.created_at|date("d/m/Y") }}</li>
            </ul>
        </div>
    </div>

    <div class="mt-8 text-right">
        <a href="{{ url_for('home') }}"
        class="inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
            Retour à l'accueil
        </a>
    </div>
</div>
{% endblock %}
