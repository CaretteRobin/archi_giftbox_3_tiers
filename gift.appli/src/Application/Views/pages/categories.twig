{# src/Views/templates/pages/categories.twig #}
{% extends "layout.twig" %}

{% block title %}Liste des catégories - Gift App{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8 text-gray-800">Liste des catégories</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for categorie in categories %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
                    <div class="p-6">
                        <h2 class="text-xl font-semibold mb-2 text-gray-700">{{ categorie.libelle }}</h2>
                        <p class="text-gray-600 mb-4">{{ categorie.description }}</p>
                        <a href="{{ url_for('categorie_details', {'id': categorie.id}) }}"
                           class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">
                            Voir les détails
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}