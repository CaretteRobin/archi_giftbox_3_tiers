{% extends "layout.twig" %}

{% block title %}Connexion / Inscription - Gift App{% endblock %}

{% block content %}
    {% if flash %}
        <div class="alert alert-success">
            {{ flash }}
        </div>
    {% endif %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Espace Authentification</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Formulaire de connexion -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h2 class="text-2xl font-semibold mb-4 text-gray-700">Connexion</h2>
                <form method="POST" action="/signin" class="space-y-4">
                    <div>
                        <label for="signin-email" class="block text-sm font-medium text-gray-600">Email :</label>
                        <input type="email" id="signin-email" name="email" placeholder="Entrez votre email"
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" required>
                    </div>
                    <div>
                        <label for="signin-password" class="block text-sm font-medium text-gray-600">Mot de passe :</label>
                        <input type="password" id="signin-password" name="password" placeholder="Entrez votre mot de passe"
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" required>
                    </div>
                    <button type="submit"
                            class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition">
                        Se connecter
                    </button>
                </form>
            </div>

            <!-- Formulaire d'inscription -->
            <div class="bg-white rounded-lg shadow-lg p-6">
                <h2 class="text-2xl font-semibold mb-4 text-gray-700">Inscription</h2>
                <form method="POST" action="/register" class="space-y-4">
                    <div>
                        <label for="register-email" class="block text-sm font-medium text-gray-600">Email :</label>
                        <input type="email" id="register-email" name="email" placeholder="Entrez votre email"
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" required>
                    </div>
                    <div>
                        <label for="register-password" class="block text-sm font-medium text-gray-600">Mot de passe :</label>
                        <input type="password" id="register-password" name="password" placeholder="Entrez un mot de passe"
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" required>
                    </div>
                    <button type="submit"
                            class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition">
                        S'inscrire
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
