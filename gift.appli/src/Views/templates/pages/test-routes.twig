{# src/Views/templates/pages/test-routes.twig #}
{% extends "layout.twig" %}

{% block title %}Test des routes - Gift App{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold mb-8 text-gray-800">Test des routes</h1>

        <div class="mb-8 border border-gray-200 rounded-lg p-6 shadow-sm bg-white">
            <h2 class="text-xl font-semibold mb-3 text-gray-700">Route 1 : Affichage des catégories</h2>
            <p class="mb-2">Route: <code class="bg-gray-100 px-2 py-1 rounded text-sm">{{ base_url() }}/categories</code></p>
            <p class="mb-4">Méthode: GET</p>
            <a href="{{ base_url() }}/categories" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester</a>
        </div>

        <div class="mb-8 border border-gray-200 rounded-lg p-6 shadow-sm bg-white">
            <h2 class="text-xl font-semibold mb-3 text-gray-700">Route 2 : Affichage d'une catégorie</h2>
            <p class="mb-2">Route: <code class="bg-gray-100 px-2 py-1 rounded text-sm">{{ base_url() }}/categorie/{id}</code></p>
            <p class="mb-4">Méthode: GET</p>
            <div class="space-x-2 mb-4">
                <a href="{{ base_url() }}/categorie/1" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester avec ID=1</a>
                <a href="{{ base_url() }}/categorie/2" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester avec ID=2</a>
                <a href="{{ base_url() }}/categorie/3" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester avec ID=3</a>
            </div>
            <form action="" onsubmit="window.location.href='{{ base_url() }}/categorie/' + document.getElementById('cat-id').value; return false;" class="flex items-center space-x-2">
                <input type="number" id="cat-id" placeholder="ID de catégorie" min="1" class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester</button>
            </form>
        </div>

        <div class="mb-8 border border-gray-200 rounded-lg p-6 shadow-sm bg-white">
            <h2 class="text-xl font-semibold mb-3 text-gray-700">Route 3 : Affichage d'une prestation</h2>
            <p class="mb-2">Route: <code class="bg-gray-100 px-2 py-1 rounded text-sm">{{ base_url() }}/prestation?id={id}</code></p>
            <p class="mb-4">Méthode: GET</p>
            <div class="space-x-2 mb-4">
                <a href="{{ base_url() }}/prestation?id=1" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester avec ID=1</a>
                <a href="{{ base_url() }}/prestation?id=2" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester avec ID=2</a>
                <a href="{{ base_url() }}/prestation" class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester sans ID</a>
            </div>
            <form action="{{ base_url() }}/prestation" method="get" class="flex items-center space-x-2">
                <input type="number" name="id" placeholder="ID de prestation" min="1" class="px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <button type="submit" class="px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700 transition-colors">Tester</button>
            </form>
        </div>
    </div>
{% endblock %}