{# src/Views/templates/pages/prestation-details.twig #}
{% extends "layout.twig" %}

{% block title %}Prestation {{ prestation.libelle }} - Gift App{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <div class="mb-4">
            <a href="{{ base_url() }}/categories" class="inline-flex items-center text-indigo-600 hover:text-indigo-800">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M9.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L7.414 9H15a1 1 0 110 2H7.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                </svg>
                Retour aux catégories
            </a>
        </div>

        {% if prestation %}
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="p-8">
                    <h1 class="text-3xl font-bold mb-2 text-gray-800">{{ prestation.libelle }}</h1>
                    <p class="text-sm text-gray-500 mb-6">ID: {{ prestation.id }}</p>

                    <div class="mb-6">
                        <p class="text-lg text-gray-600 mb-4">{{ prestation.description }}</p>
                        <div class="flex items-center justify-between">
                            <span class="text-2xl font-bold text-indigo-600">{{ prestation.tarif }} €</span>
                            <button class="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
                                Ajouter au panier
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="bg-white rounded-lg shadow-md p-8 text-center">
                <h1 class="text-2xl font-bold mb-4 text-red-600">Erreur</h1>
                <p class="text-lg text-gray-600 mb-6">Aucun ID de prestation fourni ou prestation introuvable.</p>
                <a href="{{ base_url() }}/categories"
                   class="inline-block px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
                    Voir toutes les catégories
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}